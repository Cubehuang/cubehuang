<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_above="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fac_main"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>



    <FrameLayout
        android:id="@+id/bottom_tab"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioGroup
            android:id="@+id/rg_main_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_main_shanghai"
                android:drawableTop="@drawable/selector_main_top_tab_shangshai"
                android:text="@string/activity_main_shanghai"
                style="@style/main_tab_rb_style" />
            <RadioButton
                android:id="@+id/rb_main_hangzhou"
                style="@style/main_tab_rb_style"
                android:drawableTop="@drawable/selector_main_top_tab_hangzhou"
                android:text="@string/activity_main_hangzhou"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/rg_main_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_main_guangzhou"
                android:drawableTop="@drawable/selector_main_top_tab_shangshai"
                android:text="@string/activity_main_guangzhou"
                style="@style/main_tab_rb_style" />
            <RadioButton
                android:id="@+id/rb_main_shenzhen"
                style="@style/main_tab_rb_style"
                android:drawableTop="@drawable/selector_main_top_tab_hangzhou"
                android:text="@string/activity_main_shenzhen"/>
        </RadioGroup>

    </FrameLayout>

</RelativeLayout>