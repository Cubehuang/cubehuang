<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shanghai_appBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:layout_scrollFlags="scroll|snap|enterAlways|exitUntilCollapsed"
            app:contentScrim="@color/color_8D03A9F4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shanghai_CollapsingToolbarLayout">
<!--CollapsingToolbarLayout中的layout_collapseMode可实现时差特效的效果-->
            <ImageView
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/shanghai"
                android:scaleType="centerCrop"
                />
            <!--之前试<Toolbar>，根本固定不住-->
            <androidx.appcompat.widget.Toolbar

                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/tv_shanghai_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="上海欢迎你"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <!--控件停留-->

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!--中间的一个停留-->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="我是停留"
            android:gravity="center"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <!--
    知识点1：layout_behavior:使用AppBarLayout中的提供的ScrollingViewBehavior：
        被依赖方：上面的AppBarLayout，依赖的则为我们使用的改属性的控件
    知识点2：ScrollView只能添加一个子控件-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rc_shanghai_recyclerView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>